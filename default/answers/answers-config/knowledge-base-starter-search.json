    "boards": {
      "entityTypes": [
        "ce_knowledgeboard"
      ],
      "name": "Boards",
      "searchableFields": {
        "builtin.entityType": {
          "nlpFilter": true
        },
        "name": {
          "semanticTextSearch": true
        },
        "richTextDescription": {
          "nlpFilter": true
        }
      },
      "sortBys": [],
      "source": "YEXT"
    },
    "cards": {
      "displayFields": [
        "c_parentBoard.c_boardParentFolder.slug",
        "externalArticleUpdateDate",
        "c_parentBoard.c_boardParentFolder.id",
        "c_parentBoard.c_boardParentFolder.name",
        "c_verified",
        "c_lastUpdateDate",
        "body_richtext_v2",
        "c_parentBoard.c_boardParentFolder.c_parentFolder.slug",
        "body",
        "c_parentBoard.id",
        "c_parentBoard.c_boardParentFolder.c_parentFolder.id",
        "c_parentBoard.slug",
        "c_tags",
        "c_parentBoard.c_boardParentFolder.c_parentFolder.name",
        "name",
        "landingPageUrl",
        "slug",
        "c_shareCount",
        "c_parentBoard.name",
        "c_dateCreated"
      ],
      "entityTypes": [
        "ce_knowledgecard"
      ],
      "name": "Cards",
