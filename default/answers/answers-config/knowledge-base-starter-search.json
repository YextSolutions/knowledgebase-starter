          "textSearch": true
        },
        "name": {
          "semanticTextSearch": true
        }
      },
      "sortBys": [],
      "source": "YEXT"
    },
    "folders": {
      "entityTypes": [
        "ce_knowledgefolder"
      ],
      "name": "Folders",
      "searchableFields": {
        "builtin.entityType": {
          "nlpFilter": true
        },
        "name": {
          "semanticTextSearch": true
        }
      },
      "sortBys": [],
      "source": "YEXT"
    },
    "kb_autocomplete": {
      "displayFields": [
        "c_parentBoard.c_boardParentFolder.slug",
        "c_parentBoard.slug",
        "name",
        "slug",
        "c_parentBoard.name"
      ],
      "entityTypes": [
        "ce_knowledgecard",
        "ce_knowledgeboard",
        "ce_knowledgefolder"
      ],
      "name": "Knowledge Base Autocomplete",
      "searchableFields": {
        "builtin.entityType": {},
        "name": {}
      },
      "sortBys": [],
      "source": "YEXT"
    }
